{
    "env": {
      "node": true,       // Mengaktifkan environment Node.js
      "commonjs": true,   // Mendukung CommonJS (require/exports)
      "es2021": true      // Mendukung fitur modern ES2021
    },
    "extends": "eslint:recommended", // Menggunakan aturan bawaan dari ESLint
    "parserOptions": {
      "ecmaVersion": 12   // Mendukung ES2021
    },
    "rules": {
      "global-require": "off",       // Matikan aturan yang melarang `require`
      "import/no-commonjs": "off"   // Matikan aturan linting untuk CommonJS
    }
  }